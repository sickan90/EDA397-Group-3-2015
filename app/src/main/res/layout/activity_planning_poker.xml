<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.sickan90.eda397ppapp.PlanningPoker">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/planning_poker_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning1"
                android:id="@+id/planningPokerButton1"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning2"
                android:id="@+id/planningPokerButton2"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning3"
                android:id="@+id/planningPokerButton3"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning4"
                android:id="@+id/planningPokerButton4"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning5"
                android:id="@+id/planningPokerButton5"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/planning6"
                android:id="@+id/planningPokerButton6"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:textSize="@dimen/planningPokerButtonTextSize" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
